<body>

   <div class="container">
     <%=flash[:notice]%>
    <div class="row">
        <%= render 'users/list', user: @user, book: @book %>
         <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover">
            <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
            </thead>
            <% @books.each do |book| %>
            </tbody>
            <tr>
            <td><%= link_to user_path(@user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "noimage.jpg"%></td><% end %>

            <td><%= link_to book.title, book_path(book.id), class:"no-underline" %></td>
            <td><%= book.body %></td>
            </tr>
            <% end %>
            </table>
         </div>
     </div>

   </div>
</body>



