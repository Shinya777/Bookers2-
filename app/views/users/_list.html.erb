 <body>
  <% if book.errors.any? %>
            <%= pluralize(book.errors.count, "error") %>
            <% book.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
            <% end %>
            <% end %>
    <div class="container">
      	<div class="col-xs-3">
      			 
            <h2>User info</h2>
      			<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>  
      			<table class="table">
                <tr></tr> 
      					<tr>
      						<th>name</th>
      						<th><%= user.name %></th>
      					</tr>
      					<tr>
      						<th>introduction</th>
      						<th><%= user.introduction %></th>
      					</tr>
      				</table>
      			<div class="row">
                
              <%= link_to "", edit_user_path(current_user), class: "glyphicon glyphicon-wrench btn btn-default col-xs-12" %>
      			</div>
      
      			<h2>New book</h2>
      			<div class="field row">
            <%= form_for(book) do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title, class: 'col-xs-12' %>
          

            <h4>Opinion</h4>
            <%= f.text_area :body, class: 'col-xs-12'%>

          <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book" style="margin-top: 10px ">
           <% end %>
         
        <!-- colのdiv -->
        </div> 
   <!-- containerのdiv -->
    </div>
  <!-- bodyのdiv -->
  </body>