<body>
<div class="body">
  <div class="container">
     <%=flash[:notice]%>
     <div class="row">
        <%= render 'users/list', user: @user, book: @book %>
         <div class="col-xs-9">
           <h2>Users</h2>
           <table class="table table-hover">
            <thead>
           <tr>
           <th>image</th>
           <th>name</th>
           <th></th>
           </tr>
           </thead>
           <tbody>
           <% @users.each do |user| %>
           <tr>
           <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "noimage.jpg" %></td>
           
           <td><%= user.name %></td>
           <th><%= link_to "Show", user_path(user.id), class:"no-underline"%></th>
           </tr>
           <% end %>
         </tbody>
           </table>
         </div>
        </div>
    </div>
  </div>
</body>

