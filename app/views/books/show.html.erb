<body>
  <%=flash[:notice]%>
	<div class="container">
		<div class="row">
           <%= render 'users/list', user: @user, book: Book.new %>
           
          <div class="col-xs-9">
            <h2>Book detail</h2>
              <table class="table">
                <tr>
                <td><%= link_to user_path(@user), class:"no-underline" do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "noimage.jpg" %>
                  <br>
                  <%= @book.user.name %>
                </td><% end %>

                <td><%= link_to book_path(@book), class:"no-underline" do %><%= @book.title %></td><% end %>

                <td><%= @book.body %></td>
                <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success btn-sm' %></td>
                <td><%= link_to "Destroy", book_path(@book),
                class: 'btn btn-danger btn-sm', method: :delete, "data-confirm" => "本当に消しますか?" %></td>
                <% end %>
                </tr> 
            </thead>
            </table>
          </div>
        </div>
    </div>
</body>

